
<div class="page-header"><h2>Review Pending Posts</h2></div>
<%= render :partial => "subnav" %>





<%= form_for posts_review_path, :html => { :class => 'form-horizontal' } do |f|%>  


<!-- Posting Table -->

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date Posted</th>
      <th>Title</th>
      <th>City</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to post.title, post %></td>
      <% unless( post.address.nil? || post.address.city.nil? )%>
      <td><%= post.address.city  %></td>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>


<% end %>
